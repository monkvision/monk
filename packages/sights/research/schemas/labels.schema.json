{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "labels.schema",
  "type": "object",
  "propertyNames": {
    "type": "string",
    "pattern": "[a-z]+(.[a-z]+)*"
  },
  "patternProperties": {
    "": {
      "type": "object",
      "properties": {
        "en": {
          "type": "string"
        },
        "fr": {
          "type": "string"
        }
      },
      "required": ["en", "fr"],
      "unevaluatedProperties": false
    }
  },
  "unevaluatedProperties": false
}
