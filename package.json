{
  "name": "monk",
  "version": "4.0.0",
  "packageManager": "yarn@3.2.4",
  "description": "Monorepo for the MonkJs project",
  "private": true,
  "type": "module",
  "author": "monkvision",
  "license": "BSD-3-Clause-Clear",
  "workspaces": [
    "configs/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf node_modules && yarn cache clean && yarn install",
    "build": "yarn workspaces foreach -pt run build",
    "test": "yarn workspaces foreach -pt run test",
    "test:coverage": "yarn workspaces foreach -pt run test:coverage",
    "lint": "yarn workspaces foreach -pt run lint",
    "lint:fix": "yarn workspaces foreach -pt run lint:fix",
    "wow": "node scripts/lcov-ci.js"
  },
  "devDependencies": {
    "rimraf": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/monkvision/monkjs.git"
  },
  "bugs": {
    "url": "https://github.com/monkvision/monkjs/issues"
  },
  "homepage": "https://github.com/monkvision/monkjs",
  "dependencies": {
    "parse-lcov": "^1.0.4"
  }
}
